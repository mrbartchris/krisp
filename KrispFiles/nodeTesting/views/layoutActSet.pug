            .row.headPadTop
                .col-xs-2.col-sm-2.col-md-2.col-lg-2.sidebar
                    ul.nav.nav-sidebar
                        li.dropdown-header
                            h4 Account Settings
                        li#cavatar
                            a(href='/actSettings/avat') Change Avatar
                        li#cusern
                            a(href='/actSettings/user') Change Username
                        li#cpassw
                            a(href='/actSettings/pass') Change Password
                #cDiv.col-xs-9.col-sm-9.col-md-9.col-lg-9
                    .container-fluid
                        if (avat)
                            include actSetSublays/avatar.pug
                        else if (user)
                            include actSetSublays/username.pug
                        else if (pass)
                            include actSetSublays/password.pug


