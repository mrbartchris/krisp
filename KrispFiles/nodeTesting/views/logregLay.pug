doctype html
html(lang='en')
    head
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content='Krisp Games Login Page')
        meta(name='author', content='Krisp')
        link(rel='icon', href='imgs/icon.png')
        link(href='./css/bootstrap.min.css', rel='stylesheet')
        link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css', rel='stylesheet')
        link(href='signin.css', rel='stylesheet')
        link(href='https://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/css/bootstrapValidator.min.css', rel='stylesheet')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    body
        .container-fluid
            .row.largeTextC
                .col-xs-4.col-sm-4.col-md-4.col-lg-4.largeTextC
                    button.btn.btn-default.btn-block(name='log', onclick='loginFunc()') Login
                |  |
                .col-xs-4.col-sm-4.col-md-4.col-lg-4.largeTextC
                    button.btn.btn-default.btn-block(name='reg', onclick='regFunc()') Register
            #loginRow.row(style='display: none;')
                form#loginForm.form-signin(action='loginRedir', method='post')
                    h1 Login
                    .form-group
                        input#usernamel.form-control(type='text', name='usernamel', placeholder='Username', required='')
                    .form-group
                        input#passwordl.form-control(type='password', name='passwordl', placeholder='Password', required='')
                    .checkbox
                        label
                            input#chkbx(type='checkbox', name='chkbx', value='remember-me')
                            |  Remember me
                    |
                    button.btn.btn-primary.btn-lg.btn-block(type='submit', name='login') Login
            #regRow.row(style='display: none;')
                form#registerForm.form-signin(action='registerRedir', method='post')
                    h1 Register
                    .form-group
                        input#username.form-control(type='text', name='username', placeholder='Username', required='')
                    .form-group
                        input#email.form-control(type='email', name='email', placeholder='Email', required='')
                    .form-group
                        input#password.form-control(type='password', name='password', placeholder='Password', required='')
                    .form-group
                        input#password2.form-control(type='password', name='password2', placeholder='Confirm Password', required='')
                    |
                    button.btn.btn-primary.btn-lg.btn-block(type='submit', name='login') Register Now!
            if error
                #errRow.row.margTop
                    .col-xs-4.col-sm-4.col-md-4.col-lg-4
                    #errRowInner.alert.alert-danger.col-xs-4.col-sm-4.col-md-4.col-lg-4
                        strong Error!
                        |  #{error}
            else if successMsg
                #succRow.row.margTop
                    .col-xs-4.col-sm-4.col-md-4.col-lg-4
                    #succRowInner.alert.alert-success.col-xs-4.col-sm-4.col-md-4.col-lg-4
                        strong Success!
                        |  #{successMsg}
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js', type='text/javascript')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js', type='text/javascript')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.4.5/js/bootstrapvalidator.min.js', type='text/javascript')
        script(src='https://cdn.socket.io/socket.io-1.4.5.js')
        script(src='js/lrfpScript.js')
